{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "icon-domain": {
            "description": "Domain to use for deployed apps",
            "type": "string"
        },
        "frontend-nginx-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "dhir-nginx-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "kibana-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "server-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "server-worker-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "clamav-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "crypto-password": {
            "description": "description",
            "type": "string"
        },
        "jwt-secret": {
            "description": "description",
            "type": "string"
        },
        "endpoint_dictionary": {
            "description": "description",
            "type": "string"
        },
        "endpoint_retrieval": {
            "description": "description",
            "type": "string"
        },
        "endpoint_retrieval_token": {
            "description": "description",
            "type": "string"
        },
        "endpoint_submission": {
            "description": "description",
            "type": "string"
        },
        "endpoint_submission_token": {
            "description": "description",
            "type": "string"
        },
        "postgres_readonly_role": {
            "description": "description",
            "type": "string"
        },
        "tz": {
            "description": "Timezone",
            "type": "string"
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "prod-space",
        "frontend-nginx-app-name",
        "dhir-nginx-app-name",
        "kibana-app-name",
        "server-app-name",
        "server-worker-app-name",
        "clamav-app-name",
        "icon-domain",
        "tz",
        "postgres_readonly_role",
        "endpoint_submission_token",
        "endpoint_submission",
        "endpoint_retrieval_token",
        "endpoint_retrieval",
        "endpoint_dictionary",
        "jwt-secret",
        "crypto-password"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.crypto-password"
            },
            "key": "crypto-password"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.jwt-secret"
            },
            "key": "jwt-secret"
        },
        {
            "title": {
                "$ref": "#/messages/deploy.endpoint_retrieval_token"
            },
            "type": "text",
            "key": "endpoint_retrieval_token"
        },
        {
            "title": {
                "$ref": "#/messages/deploy.endpoint_submission_token"
            },
            "type": "text",
            "key": "endpoint_submission_token"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.postgres_readonly_role"
            },
            "key": "postgres_readonly_role"
        },
        {
            "title": {
                "$ref": "#/messages/deploy.endpoint_retrieval"
            },
            "type": "text",
            "key": "endpoint_retrieval"
        },
        {
            "title": {
                "$ref": "#/messages/deploy.endpoint_submission"
            },
            "type": "text",
            "key": "endpoint_submission"
        },
        {
            "title": {
                "$ref": "#/messages/deploy.endpoint_dictionary"
            },
            "type": "text",
            "key": "endpoint_dictionary"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.tz"
            },
            "key": "tz"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/icon-domain"
            },
            "key": "icon-domain"
        },
        {
            "type": "table",
            "columnCount": 2,
            "widths": [
                "50%",
                "50%"
            ],
            "items": [
                {
                    "type": "text",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/deploy.appName.frontend-nginx"
                    },
                    "key": "frontend-nginx-app-name"
                },
                {
                    "type": "text",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/deploy.appName.dhir-nginx"
                    },
                    "key": "dhir-nginx-app-name"
                },
                {
                    "type": "text",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/deploy.appName.kibana"
                    },
                    "key": "kibana-app-name"
                },
                {
                    "type": "text",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/deploy.appName.server"
                    },
                    "key": "server-app-name"
                },
                {
                    "type": "text",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/deploy.appName.server-worker"
                    },
                    "key": "server-worker-app-name"
                },
                {
                    "type": "text",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/deploy.appName.clamav"
                    },
                    "key": "clamav-app-name"
                }
            ]
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}